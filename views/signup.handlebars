
<h2>Signup</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <form id="signup-form" class="form-inline">
        <div class="form-group mb-2 mr-sm-2">
          <label for="name-signup" class="mb-2 mr-sm-2">name:</label>
          <input class="form-input form-control mb-2 mr-sm-2" type="text" id="name-signup" placeholder="name" />
        </div>
        <div class="form-group mb-2 mr-sm-2">
          <label for="email-signup" class="mb-2 mr-sm-2">email:</label>
          <input class="form-input form-control mb-2 mr-sm-2" type="text" id="email-signup" placeholder="email" />
        </div>
        <div class="form-group mb-2 mr-sm-2">
          <label for="password-signup" class="mb-2 mr-sm-2">password:</label>
          <input class="form-input form-control mb-2 mr-sm-2" type="password" id="password-signup" placeholder="password" />
        </div>
        <button type="submit" class="btn btn-secondary mb-2">signup</button>
      </form>
    </div>
  </div>
</div>

<script src="./js/signup.js"></script>
