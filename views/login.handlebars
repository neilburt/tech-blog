
<h2>Login</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <form id="login-form" class="form-inline">
        <div class="form-group mb-2 mr-sm-2">
          <label for="email-login" class="mb-2 mr-sm-2">email:</label>
          <input type="text" class="form-input form-control" id="email-login" placeholder="email">
        </div>
        <div class="form-group mb-2 mr-sm-2">
          <label for="password-login" class="mb-2 mr-sm-2">password:</label>
          <input type="password" class="form-input form-control" id="password-login" placeholder="password">
        </div>
        <button type="submit" class="btn btn-secondary mb-2">login</button>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
